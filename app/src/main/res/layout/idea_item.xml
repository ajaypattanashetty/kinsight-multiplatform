<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:clickable="true"
    android:focusable="true"

   >
    <ImageView
        android:id="@+id/ideaImage"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="-60dp"
        android:paddingLeft="-20dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:srcCompat="@drawable/ic_fish_red"/>
    <TextView
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ideaImage"

        tools:text="@sample/ideassample.json/data/securityName"/>


    <TextView
        android:id="@+id/ideaAlpha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:paddingRight="10dp"
        android:gravity="start"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintLeft_toRightOf="@id/ideaImage"

        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@sample/ideassample.json/data/alpha"/>
    <TextView
        android:id="@+id/ideaPsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:paddingRight="10dp"
        android:gravity="start"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/ideaAlpha"
        app:layout_constraintLeft_toRightOf="@id/ideaImage"

        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@sample/ideassample.json/data/alpha"/>
    <TextView
        android:id="@+id/ideaTargetPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:textColor="@android:color/white"

        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintLeft_toRightOf="@id/ideaImage"

        tools:text="@sample/ideassample.json/data/targetPrice"/>
    <TextView
        android:id="@+id/ideaCreatedBy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/ideaTargetPrice"
        app:layout_constraintLeft_toRightOf="@id/ideaImage"

        tools:text="@sample/ideassample.json/data/createdBy"/>



</androidx.constraintlayout.widget.ConstraintLayout>