<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root_layout"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    tools:context="com.kinsight.kinsightmultiplatform.WelcomeActivity">


    <androidx.appcompat.widget.AppCompatImageView
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:srcCompat="@drawable/ic_fish_monogram"/>

    <TextView
        android:id="@+id/welcome_text"
        android:textSize="20sp"
        android:textFontWeight="1000"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_margin="150sp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alpha Capture"
        android:layout_marginBottom="700dp"
        android:gravity="bottom|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="Ex Unum, Pluribus"
        android:id="@+id/exunum"
        android:layout_margin="60sp"
        android:gravity="top|center"
        android:textAlignment="center"

        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:text="Powered by Kotlin Multiplatform"
        android:id="@+id/powered"
        android:layout_margin="0sp"
        android:gravity="top|center"
        android:textAlignment="center"

        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exunum"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
