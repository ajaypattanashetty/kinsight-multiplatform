<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    android:orientation="vertical"

    tools:context="com.kinsight.kinsightmultiplatform.views.IdeaActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_undraw_fishing_hoxa"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/fishermanCard"
        android:layout_width="100dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_height="100dp"
        android:layout_marginTop="-280dp"
        android:layout_marginLeft="270dp"
        app:cardCornerRadius="150dp"
        app:cardBackgroundColor="@android:color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_height="100dp"
            app:cardCornerRadius="150dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/fishermanImage"
                android:background="@android:color/holo_orange_dark"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:src="@drawable/ic_man"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fishermanLabel"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_marginLeft="283dp"
        android:layout_height="wrap_content"
        android:text="Fisherman:"/>
    <TextView
        android:id="@+id/fishermanText"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_marginLeft="298dp"
        android:layout_height="wrap_content"
        android:text="Dmitri"/>
    <ImageView
        android:id="@+id/alphaLabl"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="25dp"
        android:transitionName="tImage"
        app:srcCompat="@drawable/ic_fish_blue"
        android:textColor="@android:color/white"
        android:text="Alpha:"/>
    <TextView
        android:id="@+id/alphaValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="-31dp"
        android:textSize="40dp"

        android:textColor="@android:color/white"
        android:text="2.50"/>
    <ImageView
        android:id="@+id/directionImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"

        app:srcCompat="@drawable/ic_bullmarket"
        android:textColor="@android:color/white"
        android:text="Alpha:"/>
    <TextView
        android:id="@+id/ideaTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="36dp"
        android:textColor="@android:color/white"
        android:text="AMZN"/>
    <TextView
        android:id="@+id/ideaCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:text="Oracle Corporation"/>

    <View
        android:id="@+id/separatorBlock"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:textColor="@android:color/white"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizon"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:textColor="@android:color/white"
            android:layout_marginRight="50dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conviction"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ideaHorizon"
            android:textColor="@android:color/white"
            android:layout_marginLeft="45dp"
            android:textSize="@dimen/idea_detail_block_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:text="1 Month"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/ideaConviction"
            android:textColor="@android:color/white"
            android:layout_marginRight="45dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="@dimen/idea_detail_block_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"/>

    </LinearLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="25dp">
    <TextView
        android:textColor="@android:color/white"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target"/>
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:textColor="@android:color/white"
        android:layout_marginRight="50dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current"/>

</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/ideaDetailTargetPrice"
            android:textColor="@android:color/white"
            android:layout_marginLeft="45dp"
            android:textSize="@dimen/idea_detail_block_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"

            android:text="$45"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/ideaDetailCurrentPrice"
            android:textColor="@android:color/white"
            android:layout_marginRight="45dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textSize="@dimen/idea_detail_block_font_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50"/>

    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"

        android:layout_height="100dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveIdea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-10dp"

            android:contentDescription="Save Idea"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:pressedTranslationZ="12dp"
            app:srcCompat="@drawable/ic_check_white24" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>

