<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:focusedByDefault="true"
    android:id="@+id/mainLayout"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".WearOsMainActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/inner_frame_layout_padding"
        app:boxedEdges="all">
        <ImageView

            android:id="@+id/appLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"

            android:src="@drawable/ic_fish_monogram"

            />


        <TextView

            android:id="@+id/welcome_text"
            android:textSize="12sp"
            android:textFontWeight="300"
            android:textStyle="bold"
            android:textColor="@android:color/white"

            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha Capture"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="55dp"
            android:gravity="center"
             />

        <TextView
            android:layout_width="wrap_content"
            android:text="Ex Unum, Pluribus"
            android:id="@+id/exunum"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="40sp"
            android:gravity="top|center"
            android:textAlignment="center"
            android:paddingBottom="0dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/welcome_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />
        <TextView
            android:layout_width="wrap_content"
            android:text="Powered by Kotlin Multiplatform"
            android:id="@+id/powered"
            android:layout_marginTop="150sp"
            android:gravity="bottom|center"
            android:textAlignment="center"
            android:layout_marginLeft="20sp"
            android:textSize="10sp"
            android:textFontWeight="300"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/exunum"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />


    </FrameLayout>
</androidx.wear.widget.BoxInsetLayout>